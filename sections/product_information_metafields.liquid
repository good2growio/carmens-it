


<div class="product_information_metafields">
  <div class="page-width">
    {% if product.description or product.metafields.my_fields.featured_image !=blank %}
    <div class="product_top_info">
      {% if product.description !=blank %}
      <div class="product_desc">
        {{ product.description }}
      </div>
      {% endif %}
      {% if product.metafields.my_fields.featured_image !=blank %}
      <div class="product_info_img">
        <img src="{{product.metafields.my_fields.featured_image | img_url:'master'}}"/>
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
  {% if product.metafields.my_fields.heal or product.metafields.my_fields.lining or product.metafields.my_fields.product_sole or product.metafields.my_fields.featured_image_two !=blank %}
  <div class="product_information-main">
    <div class="page-width">

      <div class="product_information">
        <div class="product_info_metafileds_data">

          <div class="product_metafields_item">
            {% if product.metafields.my_fields.heal !=blank %}
            <div class="metafileds_items">
              <strong>Tacco</strong>
              {{product.metafields.my_fields.heal}}
            </div>
            {% endif %}


            <div class="metafileds_items">
              <strong>Tomaia</strong>
              {% assign option_value ='' %}
              {% for option in product.options_with_values %}
              {% assign option_name = option.name | downcase %}
              {% if option_name =='material' %} 
              {% assign option_value ='' %}
              {%- assign option_index = forloop.index0 -%}
              {% for variant in product.variants %}

              {% assign option_value = variant.options[option_index] %}
              
              {% endfor %}
              {% endif %}     
              {% endfor  %}           
              <span class="cst_material_text">{{option_value | split:'(' | first}}</span>

            </div>

          </div>
          <div class="product_metafields_item">
            {% if product.metafields.my_fields.lining !=blank %}
            <div class="metafileds_items">
              <strong>Fodera</strong>
              {{product.metafields.my_fields.lining}}
            </div>
            {% endif %}

            {% if product.metafields.my_fields.product_sole !=blank %}
            <div class="metafileds_items">
              <strong>Suola</strong>
              {{product.metafields.my_fields.product_sole}}
            </div>
            {% endif %}
          </div>
        </div>
        {% if product.metafields.my_fields.featured_image_two !=blank %}
        <div class="product_info_img_two">
          <img src="{{product.metafields.my_fields.featured_image_two | img_url:'master'}}"/>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endif %}
</div>



